FROM python:3.10-slim

COPY ./requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt
RUN useradd -s /bin/bash admin

ENV TZ="Europe/Berlin"

RUN mkdir /src
RUN mkdir /src/grb_files
RUN chown -R admin /src
RUN chown -R admin /src/grb_files

COPY ./crawler/__init__.py /src/__init__.py
COPY ./crawler/dwd.py /src/dwd.py
COPY ./crawler/nuts_mapper.py /src/nuts_mapper.py
COPY ./crawler/data/lat_coordinates.npy /src/data/lat_coordinates.npy
COPY ./crawler/data/lon_coordinates.npy /src/data/lon_coordinates.npy
COPY ./crawler/data/plz_matrix.npy /src/data/plz_matrix.npy

USER admin
WORKDIR /src

CMD ["python", "-u", "./dwd.py"]