FROM python:3.9-slim

COPY ./requirements.txt .

RUN python -m pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt
RUN useradd -s /bin/bash admin

ENV TZ="Europe/Berlin"

RUN mkdir /src
RUN mkdir /src/grb_files
RUN chown -R admin /src
RUN chown -R admin /src/grb_files

COPY ./crawler/__init__.py /src/crawler/__init__.py
COPY ./crawler/dwd.py /src/crawler/dwd.py
COPY ./crawler/data/lat_coordinates.npy /src/crawler/data/lat_coordinates.npy
COPY ./crawler/data/lon_coordinates.npy /src/crawler/data/lon_coordinates.npy
COPY ./crawler/data/plz_matrix.npy /src/crawler/data/plz_matrix.npy

COPY ./main_dwd.py /src/main_dwd.py

USER admin
WORKDIR /src

CMD ["python", "-u", "./main_dwd.py"]